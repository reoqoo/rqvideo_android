<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="logoVM"
            type="com.gw.reoqoo.ui.logo.LogoVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_100"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="@dimen/dp_192"
            android:layout_height="@dimen/dp_192"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_173"
            android:src="@drawable/app_icon_splash_logo" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/app_img_splash_bottom" />
    </LinearLayout>
</layout>