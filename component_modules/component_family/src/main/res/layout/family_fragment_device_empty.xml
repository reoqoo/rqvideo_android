<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@drawable/family_shape_bg_device_list_item"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_192"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50"
                android:src="@drawable/family_img_dev_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center_horizontal"
                android:text="@string/AA0571"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/add_btn"
                style="@style/fullWidthButton.AppCompat"
                android:layout_width="@dimen/dp_192"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_68"
                android:paddingHorizontal="@dimen/dp_16"
                android:stateListAnimator="@null"
                android:text="@string/AA0049"
                android:textAllCaps="false"
                android:textColor="@color/white_100" />
        </LinearLayout>

    </LinearLayout>

</layout>
