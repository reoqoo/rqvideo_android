<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_17"
            tools:text="@string/AA0164" />

        <ImageView
            android:id="@+id/iv_dev_img"
            android:layout_width="@dimen/dp_146"
            android:layout_height="@dimen/dp_146"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/family_icon_device_holder_place" />

        <TextView
            android:id="@+id/tv_dev_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_15"
            tools:text="reoqoo Cam55" />

    </LinearLayout>
</layout>
