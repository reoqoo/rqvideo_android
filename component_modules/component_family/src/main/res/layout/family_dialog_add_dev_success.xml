<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llContentRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/family_shape_bg_device_list_item"
        android:shadowRadius="@dimen/dp_8"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AA0089"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_152"
            android:layout_marginTop="@dimen/dp_16"
            tools:src="@drawable/family_icon_device_holder_place" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_16"
            tools:text="reoqoo Cam55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:textColor="@color/gw_reoqoo_widget_selector_comm_dialog_action_color"
                android:textSize="@dimen/sp_16"
                android:text="@string/AA0059"
                tools:text="取消" />

            <View
                android:id="@+id/split_view"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_29"
                android:background="@color/black_10" />

            <TextView
                android:id="@+id/tvAccept"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:textColor="@color/gw_reoqoo_widget_selector_comm_dialog_action_color"
                android:textSize="@dimen/sp_16"
                android:text="@string/AA0166"
                tools:text="确认" />
        </LinearLayout>
    </LinearLayout>
</layout>
