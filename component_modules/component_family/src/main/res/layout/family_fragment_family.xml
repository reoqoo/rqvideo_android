<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f3f6">

        <!--   背景图     -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/family_image_home_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.gw_reoqoo.lib_widget.immersive.ImmersiveView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                app:immersive_type="statusBar" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.gw_reoqoo.component_family.widgets.PullToRefreshLayout
                    android:id="@+id/pull_to_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.gw_reoqoo.component_family.widgets.sticky.HeaderScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical"
                        android:tag="view_scroll">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.gw_reoqoo.component_family.widgets.sticky.StickyLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                tools:visibility="visible">

                                <LinearLayout
                                    android:id="@+id/ll_marquee_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_40"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    tools:visibility="visible"
                                    android:visibility="gone"
                                    android:paddingHorizontal="@dimen/dp_12"
                                    android:background="@color/color_fff4eb">

                                    <ImageView
                                        android:layout_width="@dimen/dp_16"
                                        android:layout_height="@dimen/dp_16"
                                        android:src="@drawable/gw_reoqoo_ic_marquee_notice"/>

                                    <TextView
                                        android:id="@+id/tv_marquee_content"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/dp_40"
                                        tools:text="跑马灯效果控制示例文本，将重复滚动指定次数。跑马灯效果控制示例文本，将重复滚动指定次数。"
                                        android:ellipsize="marquee"
                                        android:marqueeRepeatLimit="-1"
                                        android:singleLine="true"
                                        android:focusable="true"
                                        android:scrollHorizontally="true"
                                        android:textSize="@dimen/sp_12"
                                        android:textColor="@color/color_e6ff7500"
                                        android:focusableInTouchMode="true"
                                        android:paddingHorizontal="@dimen/dp_8"
                                        android:gravity="center_vertical"/>

                                    <ImageView
                                        android:id="@+id/ic_marquee_close"
                                        android:layout_width="@dimen/dp_16"
                                        android:layout_height="@dimen/dp_16"
                                        android:src="@drawable/gw_reoqoo_ic_marquee_close"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_home_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_12"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/dp_15"
                                    android:paddingTop="@dimen/dp_4"
                                    android:paddingEnd="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_4">

                                    <TextView
                                        android:id="@+id/tv_home_user"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black_100"
                                        android:textSize="@dimen/sp_25"
                                        tools:text="二三的家" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:id="@+id/add_btn"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:src="@drawable/family_add_btn" />
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_37" />

                                    <RelativeLayout
                                        android:id="@+id/rl_home_banner"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_78"
                                        android:layout_marginHorizontal="@dimen/dp_15"
                                        android:visibility="gone">

                                        <ImageView
                                            android:id="@+id/iv_home_banner"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="fitXY" />

                                        <ImageButton
                                            android:id="@+id/iv_home_banner_close"
                                            android:layout_width="@dimen/dp_20"
                                            android:layout_height="@dimen/dp_20"
                                            android:layout_alignParentEnd="true"
                                            android:layout_margin="@dimen/dp_8"
                                            android:background="@drawable/icon_notice_close" />

                                    </RelativeLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/ll_home_guide"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_80"
                                        android:layout_marginHorizontal="@dimen/dp_16"
                                        android:visibility="visible">

                                        <eightbitlab.com.blurview.BlurView
                                            android:id="@+id/blurView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:blurOverlayColor="@color/white_40" />

                                        <ImageView
                                            android:id="@+id/iv_home_bg"
                                            android:layout_width="@dimen/dp_167"
                                            android:layout_height="match_parent"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/gw_reoqoo_iv_home_bg"
                                            app:layout_constraintRight_toRightOf="parent" />

                                        <ImageView
                                            android:id="@+id/iv_home_guide"
                                            android:layout_width="@dimen/dp_90"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/dp_23"
                                            android:src="@drawable/gw_reoqoo_home_dev_icon"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/dp_4"
                                            android:gravity="center_vertical|end"
                                            android:text="@string/AA0498"
                                            android:textColor="@color/color_000000_90"
                                            android:textSize="14sp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@id/iv_home_guide_arrow"
                                            app:layout_constraintStart_toEndOf="@id/iv_home_guide"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <ImageView
                                            android:id="@+id/iv_home_guide_arrow"
                                            android:layout_width="@dimen/dp_18"
                                            android:layout_height="@dimen/dp_18"
                                            android:layout_marginEnd="@dimen/dp_20"
                                            android:src="@drawable/gw_reoqoo_ic_home_double_arrow"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_dev_share_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_15"
                                        android:layout_marginEnd="@dimen/dp_15"
                                        android:background="@drawable/family_shape_device_notift_bg"
                                        android:orientation="vertical"
                                        android:visibility="gone"
                                        tools:visibility="gone">

                                        <TextView
                                            android:id="@+id/tv_dev_share_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/dp_15"
                                            android:layout_marginTop="@dimen/dp_15"
                                            android:layout_marginEnd="@dimen/dp_15"
                                            android:layout_marginBottom="@dimen/dp_8"
                                            android:text="@string/AA0161"
                                            android:textColor="@color/black_90"
                                            android:textSize="@dimen/sp_13" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_marginEnd="@dimen/dp_15"
                                            android:layout_marginBottom="@dimen/dp_6"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_ignore"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:clickable="true"
                                                android:focusable="true"
                                                android:paddingStart="@dimen/dp_15"
                                                android:paddingTop="@dimen/dp_8"
                                                android:paddingEnd="@dimen/dp_15"
                                                android:paddingBottom="@dimen/dp_8"
                                                android:text="@string/AA0162"
                                                android:textColor="@color/gw_reoqoo_widget_selector_comm_dialog_action_blue_color"
                                                android:textSize="@dimen/sp_13" />

                                            <TextView
                                                android:id="@+id/tv_check"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dp_8"
                                                android:clickable="true"
                                                android:focusable="true"
                                                android:paddingStart="@dimen/dp_15"
                                                android:paddingTop="@dimen/dp_8"
                                                android:paddingEnd="@dimen/dp_15"
                                                android:paddingBottom="@dimen/dp_8"
                                                android:text="@string/AA0163"
                                                android:textColor="@color/gw_reoqoo_widget_selector_comm_dialog_action_blue_color"
                                                android:textSize="@dimen/sp_13" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </FrameLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/title_rv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/dp_10"
                                    android:paddingEnd="@dimen/dp_10"
                                    app:isSticky="true"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:itemCount="2"
                                    tools:listitem="@layout/family_title_list_item" />

                            </com.gw_reoqoo.component_family.widgets.sticky.StickyLinearLayout>

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/view_pager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:tag="view_pager" />

                        </LinearLayout>

                    </com.gw_reoqoo.component_family.widgets.sticky.HeaderScrollView>

                </com.gw_reoqoo.component_family.widgets.PullToRefreshLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>

        <!--  悬浮按钮  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_float_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_130"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_close_float_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_float_close"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_float_banner"
                android:layout_width="@dimen/dp_63"
                android:layout_height="@dimen/dp_63"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_close_float_banner"
                tools:src="@drawable/icon_float_test" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
