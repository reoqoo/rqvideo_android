<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_100"
        android:orientation="vertical">

        <com.gw_reoqoo.lib_widget.immersive.ImmersiveView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/AA0192"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dp_307"
            android:layout_height="@dimen/dp_263"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_125"
            android:scaleType="fitXY"
            android:src="@drawable/house_watch_img_empty_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/AA0193"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/bt_add_device"
            style="@style/fullWidthButton.AppCompat"
            android:layout_width="@dimen/dp_192"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/AA0194"
            android:textAllCaps="false" />
    </LinearLayout>
</layout>
