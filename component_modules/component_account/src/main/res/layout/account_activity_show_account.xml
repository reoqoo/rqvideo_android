<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f3f6">

        <com.gw_reoqoo.lib_widget.title.WidgetCommonTitleView
            android:id="@+id/layout_title"
            style="@style/titleView"
            app:widgetBackground="@color/transparent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_bg"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/gw_reoqoo_account_btn_logout_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_title">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_68"
                android:layout_marginTop="@dimen/dp_38"
                tools:src="@drawable/gw_reoqoo_icon_bind_mobile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23"
                android:textColor="@color/color_000000_90"
                android:textSize="@dimen/sp_15"
                tools:text="已绑定：1853745968" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sure"
                style="@style/fullWidthButton.AppCompat"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginVertical="@dimen/dp_38"
                android:text="@string/AA0298" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>