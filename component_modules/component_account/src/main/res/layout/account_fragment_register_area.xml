<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff">

        <com.gw_reoqoo.lib_widget.title.AppTitle
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_register_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_27"
            android:text="@string/AA0017"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_26"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_title"
            tools:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_register_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_27"
            android:text="@string/AA0015"
            android:textColor="@color/color_1f1f1f_60"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="@id/app_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_register_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_27"
            android:background="@drawable/gw_reoqoo_widget_input_bg_unfocused"
            android:drawableEnd="@drawable/gw_reoqoo_account_icon_next"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_13"
            android:textColor="@color/color_000000_90"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_notice" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sure"
            style="@style/fullWidthButton.AppCompat"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_44"
            android:text="@string/AA0018"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_area" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>