<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f3f6"
        android:orientation="vertical">

        <com.gw_reoqoo.lib_widget.immersive.RooqooImmersiveView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1" />

        <com.gw_reoqoo.lib_widget.title.AppTitle
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main_text="@string/AA0151" />


        <LinearLayout
            android:layout_width="@dimen/dp_276"
            android:layout_height="@dimen/dp_278"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/gw_reoqoo_widget_bg_card_15"
            android:gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/dp_211"
                android:layout_height="@dimen/dp_211"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="@dimen/dp_211"
                    android:layout_height="@dimen/dp_211"
                    android:background="@color/black_5"
                    android:scaleType="centerInside"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/gw_reoqoo_widget_loading" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lav_load"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/gw_reoqoo_widget_loading"
                    tools:visibility="visible" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_expiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_60"
                    android:textSize="@dimen/sp_12"
                    tools:text="@string/AA0157" />

                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@drawable/dev_share_icon_refresh" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/AA0158"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_title_guests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_0"
            android:paddingBottom="@dimen/dp_13"
            android:text="@string/AA0159"
            android:textColor="@color/black_60"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/gw_reoqoo_widget_bg_card_12"
                android:overScrollMode="never"
                android:paddingVertical="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                tools:itemCount="3"
                tools:listitem="@layout/dev_share_item_near_share_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.gw_reoqoo.lib_widget.immersive.RooqooImmersiveView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            app:immersive_type="navigationBar" />
    </LinearLayout>
</layout>
