<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_77">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_dev_icon"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:src="@drawable/dev_share_icon_device_holder_place" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dev_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_6"
                android:layout_weight="1"
                android:textColor="@color/color_000000_90"
                android:textSize="@dimen/sp_15"
                tools:text="reoqoo Cam55" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/icon_right_arrow_green" />
        </LinearLayout>

        <View
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_69"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/black_5" />
    </RelativeLayout>

</layout>
