<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_12"
            android:src="@drawable/icon_default_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_visitor_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toTopOf="@id/tv_visitor_account"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintRight_toLeftOf="@id/btn_visitor_del"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人吃苹果的小雪人" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_visitor_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_visitor_name"
            app:layout_constraintTop_toBottomOf="@id/tv_visitor_name"
            tools:text="xia****com" />

        <TextView
            android:id="@+id/btn_visitor_del"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_29"
            android:layout_marginEnd="@dimen/dp_18"
            android:background="@drawable/dev_share_btn_del_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/AA0182"
            android:textColor="@color/widget_selector_comm_dialog_action_green_color"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/split_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_000000_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btn_visitor_del"
            app:layout_constraintStart_toStartOf="@id/tv_visitor_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
