<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingStart="@dimen/dp_28"
            android:paddingTop="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_0"
            android:text="@string/AA0145"
            android:textColor="@color/black_60"
            android:textSize="@dimen/sp_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            tools:itemCount="3"
            tools:listitem="@layout/dev_share_item_device_list" />

        <Button
            android:id="@+id/btn_next"
            style="@style/fullWidthButton.AppCompat"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_23"
            android:enabled="false"
            android:text="@string/AA0377" />
    </LinearLayout>
</layout>